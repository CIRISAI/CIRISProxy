# CIRISProxy Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# LLM Provider API Keys (SERVER-SIDE ONLY - NEVER EXPOSE TO CLIENTS)
# =============================================================================

# Groq API Key (primary provider - fast inference)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# Together AI API Key (secondary provider - model diversity)
# Get from: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=your_together_api_key_here

# OpenAI API Key (optional fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# CIRISBilling Integration
# =============================================================================

# Billing service URL
BILLING_API_URL=https://billing.ciris.ai

# Service-to-service API key for CIRISBilling
# Generate in CIRISBilling admin or use a dedicated service account
BILLING_API_KEY=your_billing_service_key_here

# =============================================================================
# LiteLLM Configuration
# =============================================================================

# Master key for LiteLLM admin operations (not for client auth)
# Generate with: openssl rand -hex 32
LITELLM_MASTER_KEY=sk-your_master_key_here

# Log level: DEBUG, INFO, WARNING, ERROR
LITELLM_LOG_LEVEL=INFO
